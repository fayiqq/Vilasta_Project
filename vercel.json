{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",   // Path to your main function (e.g., entry file)
      "use": "@vercel/node"     // Use Node.js builder
    }
  ],
  "routes": [
    {
      "src": "/(.*)",            // Route to match all requests
      "dest": "index.js"    // Points to your main function handler
    }
  ]
}
